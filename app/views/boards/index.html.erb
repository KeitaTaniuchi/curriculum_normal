<% content_for(:title, I18n.t('.shared.header.boards_list')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
          <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
        </div>
      </form>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <% @boards.each do |board| %>
            <%= render board %>
          <% end %>
        <% else %>
          <p><%= t('.no_message_board') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
